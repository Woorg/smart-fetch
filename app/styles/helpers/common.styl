html,
body
	height 100%

.page
	// background url('../images/general/hero-bg.jpg') 0 0 /  no-repeat
	font-family $hR
	font-weight normal
	font-size 16px
	line-height 1.4
	color #404040

.page__container
	+r(1024px)
		padding-left 10px
		padding-right 10px

.button
	border none
	padding 2px 5px 5px
	display inline-block
	vertical-align top
	text-align center
	line-height 1
	color #fff
	background #00aaa0
	border-radius 0
	text-decoration none
	tr(background .3s ease)
	&:hover,
	&:focus
		background darken(#00aaa0 , 10)
		color #fff


// titles

.title
	padding-left 5px
	font-family $cR
	font-size 31px
	line-height 1.2
	color #4d4d4d


.row
	+r(1024px)
		margin-left -10px
		margin-right -10px


.col
	padding-left 50px
	padding-right 50px
	+r(1024px)
		padding-left 10px
		padding-right 10px


// wysiwyg editor styles

.wysiwyg

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin-bottom 30px
		font-family $hB
		line-height 1.4
	h1
		margin-bottom 50px
		font-size 60px
	h2
		margin-bottom 25px
		font-size 48px
		line-height 40px
	h3
		margin-bottom 25px
		font-size 36px
		line-height 40px
	h4
		margin-bottom 25px
		font-size 26px
	h5
		margin-bottom 25px
		font-size 26px
	p
		font-family $hR
		line-height 1.4
		b
			font-size 20px
	b
		font-family $hR


	pre
		margin-bottom 30px
		padding-bottom 25px

	em
		font-family $hR
	ul,
	ol
		margin-bottom 20px
	ul
		li
			margin-bottom 8px

	img
		margin-bottom 20px
		max-width 100%
		height auto

	blockquote
		position relative
		margin-bottom 30px
		padding-top 10px
		padding-bottom 10px
		padding-left 20px
		font-family $hR
		font-size 17px
		p
			margin-bottom 0
	a
		text-decoration none
		&:hover
			text-decoration underline

